{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "lodash/*": [
        "node_modules/@types/lodash-es/*"
      ]
    },
    "target": "es6",
    "types": [
      "node",
      "webpack-env"
    ],
    "lib": [
      "dom",
      "es2015",
      "es7"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./test/**/*.ts"
  ],
  "compileOnSave": false
}
